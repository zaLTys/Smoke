@page "/login"

<MudContainer>
    <MudGrid>
        <MudItem xs="12">
            <MudButton Variant="Variant.Outlined"
                       ButtonType="ButtonType.Submit"
                       StartIcon="@Icons.Material.Filled.Login"
                       DisableElevation="true"
                       Size="Size.Small"
                       Style="background-color: white;min-width: 150px;"
                       Color="Color.Primary"
                       OnClick="HandleValidSubmit">
                Login
            </MudButton>
        </MudItem>
    </MudGrid>
</MudContainer>
